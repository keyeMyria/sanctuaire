<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.logz.apollo.dao.UserDao">

    <select id="getUser" resultType="io.logz.apollo.models.User">
        SELECT *
        FROM users
        WHERE user_email = #{userEmail}
    </select>

    <select id="getAllUsers" resultType="io.logz.apollo.models.User">
        SELECT first_name, last_name, user_email, is_admin, is_enabled
        FROM users
    </select>

    <insert id="addUser">
        INSERT INTO users
        VALUES (#{userEmail}, #{firstName}, #{lastName}, #{hashedPassword}, #{isAdmin}, #{isEnabled})
    </insert>

    <insert id="updateUser">
        UPDATE users SET
        user_email=#{userEmail},
        first_name=#{firstName},
        last_name=#{lastName},
        hashed_password=#{hashedPassword},
        is_admin=#{isAdmin},
        is_enabled=#{isEnabled}
        WHERE user_email=#{userEmail}
    </insert>
</mapper>
